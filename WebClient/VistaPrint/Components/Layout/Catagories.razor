@attribute [StreamRendering]

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid flex-wrap m-0 p-0">
        <div class="d-block d-lg-none w-100 d-flex p-0 justify-content-between justify-content-lg-around flex-wrap">
            <button class="me-1 navbar-toggler btn-nav" style="border-color:transparent !important; box-shadow:none !important" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <a class="navbar-brand" href="#">
                <img alt="Vistaprint Logo" height="30" src="https://storage.googleapis.com/a1aa/image/7mQefmPfixJb1JRSTzgOxbP9aSuJqbBS5xsidYd7cgYPofbOB.jpg" width="100" />
            </a>

            <form class="d-md-flex ms-auto col-md-6 flex-grow-1 d-none p-2">
                <input aria-label="Search" class="form-control form-control-md me-2" placeholder="Search" type="search" />
                <button class="btn btn-outline-success" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>

            <a class="btn btn-md d-block d-sm-none btn-nav"> <i class="fas fa-search"></i></a>

            <a class="btn btn-md btn-nav" href="#">
                <i class="fas fa-question-circle"></i>

            </a>
            <a class="btn btn-md btn-nav" href="#">
                <i class="fas fa-folder-open"></i>

            </a>
            <a class="btn btn-md btn-nav" href="#">
                <i class="fas fa-sign-in-alt"></i>

            </a>
            <a class="btn btn-md btn-nav" href="#">
                <i class="fas fa-shopping-cart"></i>

            </a>
        </div>


        <div class="collapse navbar-collapse justify-content-lg-center justify-content-start" id="navbarTogglerDemo01">
            <div class="d-flex d-xl-block ms-5 ms-lg-1">
                <ul class="navbar-nav d-flex justify-content-between text-lg-center align-items-lg-center">
                   
                    @if (CatagoriesList is null)
                    {
                        <p>Loading........</p>
                    }
                    else
                    {
                        @foreach (var item in CatagoriesList)
                        {
                            <li class="nav-item">
                                <button class="nav-link btn-cat-nav" href="">
                                    @((MarkupString)item)
                                </button>
                                <div class="droplist p-0 rounded-bottom-5">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <div class="row">
                                                <!-- Column 1 -->
                                                <div class="col-md-6">
                                                    <h5>Column 1 - Heading 1</h5>
                                                    <p>Some details or description under heading 1.</p>
                                                    <button class="btn btn-primary btn-sm">Action 1</button>

                                                    <h5 class="mt-3">Column 1 - Heading 2</h5>
                                                    <p>Some details or description under heading 2.</p>
                                                    <button class="btn btn-primary btn-sm">Action 2</button>
                                                </div>

                                                <!-- Column 2 -->
                                                <div class="col-md-6">
                                                    <h5>Column 2 - Heading 1</h5>
                                                    <p>Some details or description under heading 1.</p>
                                                    <button class="btn btn-secondary btn-sm">Action 1</button>

                                                    <h5 class="mt-3">Column 2 - Heading 2</h5>
                                                    <p>Some details or description under heading 2.</p>
                                                    <button class="btn btn-secondary btn-sm">Action 2</button>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                           
                        }
                    }
                </ul>

            </div>
           

        </div>
    </div>
</nav>

@code {
    private List<string>? CatagoriesList;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);
        CatagoriesList = GetAllCatagories();
    }


    private List<string> GetAllCatagories()
    {
        return new()
        { "Deals","Holiday &amp; Christmas Cards","Calendars &amp; Gifts","Business Cards","Print Advertising &amp; Office","Signs, Banners &amp; Posters","Labels, Stickers &amp; Packaging","Clothing &amp; Bags","Promotional Products","Invitations, Stationery &amp; Home","Websites by Vistaprint","Design &amp; Logo"};
    }
}
